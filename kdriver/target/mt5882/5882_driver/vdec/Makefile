SUB_COMPONENTS += img
endif
ifndef CC_VDEC_RV_DISABLE
SUB_COMPONENTS += rv
endif
endif

ifdef CC_H264_SUPPORT
ifndef CC_VDEC_H264_DISABLE
SUB_COMPONENTS += h264
endif
endif

#ifndef CC_VDEC_AVS_DISABLE
#SUB_COMPONENTS += avs
#endif

